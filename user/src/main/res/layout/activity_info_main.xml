<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E6E6E6"
    tools:context="com.shopmall.user.InfoMainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60">

        <ImageView
            android:layout_centerVertical="true"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:src="@mipmap/top_bar_left_back"/>

        <TextView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收货信息"
            android:textSize="@dimen/sp_25"
            android:textColor="#000000"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60">

        <TextView
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="@dimen/dp_70"
            android:layout_height="match_parent"
            android:text="账号："
            android:gravity="center"
            android:textSize="@dimen/dp_20"
            android:textColor="@color/color_black"/>

        <EditText
            android:id="@+id/info_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入账号"
            android:background="@color/color_white"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/color_black_5"/>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60">

        <TextView
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="@dimen/dp_70"
            android:layout_height="match_parent"
            android:text="电话："
            android:gravity="center"
            android:textSize="@dimen/dp_20"
            android:textColor="@color/color_black"/>

        <EditText
            android:id="@+id/info_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入电话"
            android:background="@color/color_white"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/color_black_5"/>

    <Button
        android:id="@+id/info_phone_tj"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提交"/>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <TextView
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="120dp"
            android:layout_height="@dimen/dp_50"
            android:text="收货地址："
            android:gravity="center"
            android:textSize="@dimen/dp_20"
            android:textColor="@color/color_black"/>

        <EditText
            android:id="@+id/info_address"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入收货地址"
            android:background="@color/color_white"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/color_black_5"/>

    <Button
        android:id="@+id/info_address_tj"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提交"/>

    <Button
        android:id="@+id/info_submit"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_gravity="center_horizontal"
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_50"
        android:text="提交信息"
        android:textSize="@dimen/dp_20"
        android:textColor="@color/color_white"
        android:background="@drawable/circop_submit"/>

</LinearLayout>
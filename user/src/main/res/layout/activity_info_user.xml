<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E6E6">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"

        >
        <ImageView
            android:layout_centerVertical="true"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
             android:src="@mipmap/top_bar_left_back"
            ></ImageView>

       <TextView
           android:layout_centerInParent="true"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="收货信息"
           android:textSize="@dimen/sp_25"
           android:textColor="#000000"
           ></TextView>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"

        >
        <TextView
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="@dimen/dp_70"
            android:layout_height="match_parent"
            android:text="账号："
            android:gravity="center"
            android:textSize="@dimen/dp_20"
            android:textColor="@color/color_black"
            ></TextView>

        <EditText
            android:id="@+id/info_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入账号"
            android:background="@color/color_white"
            ></EditText>


        
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/color_black_5"
        ></View>


    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"

        >
        <TextView
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="@dimen/dp_70"
            android:layout_height="match_parent"
            android:text="电话："
            android:gravity="center"
            android:textSize="@dimen/dp_20"
            android:textColor="@color/color_black"
            ></TextView>

        <EditText
            android:id="@+id/info_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入电话"
            android:background="@color/color_white"
            ></EditText>



    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/color_black_5"
        ></View>
    <Button
        android:id="@+id/info_phone_tijiao"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提交"
        ></Button>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"

        >
        <TextView
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_50"
            android:text="收货地址："
            android:gravity="center"
            android:textSize="@dimen/dp_20"
            android:textColor="@color/color_black"
            ></TextView>

        <EditText
            android:id="@+id/info_adress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入收货地址"
            android:background="@color/color_white"
            ></EditText>



    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/color_black_5"
        ></View>
    <Button
        android:id="@+id/info_adress_tijiao"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提交"
        ></Button>
    
    
    <Button
        android:id="@+id/info_submit"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_gravity="center_horizontal"
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_50"
        android:text="提交信息"
        android:textColor="@color/color_white"
        android:background="@drawable/circop_submit"
        ></Button>

</LinearLayout>
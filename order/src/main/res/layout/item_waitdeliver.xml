<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="@dimen/dp_200"
     android:background="@drawable/circop_order"
     android:layout_marginTop="@dimen/dp_15"
    android:layout_marginLeft="@dimen/dp_20"
    android:layout_marginRight="@dimen/dp_20"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"

            >
            <TextView
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="硅谷商城旗舰店"
                android:gravity="center_vertical"
                android:textSize="@dimen/dp_20"
                android:textColor="@color/color_black"
                ></TextView>

            <ImageView
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_gravity="center_vertical"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@mipmap/home_arrow_right"
                ></ImageView>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"

                ></TextView>

            <TextView
                android:layout_marginRight="@dimen/dp_15"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="等待卖家发货"
                android:textColor="@color/color_red"
                android:textSize="@dimen/dp_15"
                ></TextView>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_gray"
            ></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时间："
                android:textSize="@dimen/dp_20"
                android:textColor="@color/color_black"
                ></TextView>

            <TextView
                android:id="@+id/item_waitdeliver_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detils_money"
                android:textSize="@dimen/dp_20"
                android:textColor="@color/color_gray"
                ></TextView>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单号："
                android:textSize="@dimen/dp_20"
                android:textColor="@color/color_black"
                ></TextView>

            <TextView
                android:id="@+id/item_waitdeliver_dan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detils_money"
                android:textSize="@dimen/dp_20"
                android:textColor="@color/color_gray"
                ></TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="需付款："
                android:textSize="@dimen/dp_20"
                android:textColor="@color/color_black"
                ></TextView>

            <TextView
                android:id="@+id/item_waitdeliver_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detils_money"
                android:textSize="@dimen/dp_20"
                android:textColor="@color/color_red"
                ></TextView>

        </LinearLayout>
    </LinearLayout>


   <Button
       android:id="@+id/item_waitdeliver_yes"
       android:layout_alignParentBottom="true"
       android:layout_alignParentRight="true"
       android:layout_marginRight="@dimen/dp_20"
       android:layout_width="@dimen/dp_120"
       android:layout_height="@dimen/dp_40"
       android:background="@drawable/circle_red"
       android:text="催促商家发货"
       android:textColor="@color/color_red"
       ></Button>


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_130"
    android:minHeight="@dimen/dp_130"
    android:layout_marginTop="@dimen/dp_15">

    <ImageView
        android:id="@+id/item_order_image"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_width="@dimen/dp_130"
        android:layout_height="@dimen/dp_130"/>

    <LinearLayout
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_order_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="2"
            android:text="@string/detils_nmae"
            android:textColor="@color/color_black"
            android:textSize="@dimen/dp_15"/>

        <TextView
            android:layout_marginTop="@dimen/dp_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_color"
            android:textSize="@dimen/dp_15"
            android:background="@drawable/circop_chima"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginRight="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_order_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/detils_money"
            android:textColor="@color/color_black"
            android:textSize="@dimen/dp_20"/>

        <TextView
            android:id="@+id/item_order_num"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ã—1"
            android:textSize="@dimen/dp_20"
            android:layout_gravity="right"/>

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white_3"
    tools:context=".OrderActivity">

    <LinearLayout
        android:id="@+id/order_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:background="#FA0234">

        <ImageView
            android:id="@+id/order_back"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_gravity="center_vertical"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:src="@mipmap/ic_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_40"
            android:text="确认订单"
            android:gravity="center_vertical"
            android:textSize="@dimen/sp_25"
            android:textColor="#000000"/>

    </LinearLayout>

    <ScrollView
        android:layout_below="@id/order_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_70"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_150"
                    android:background="@drawable/circop_order">

                    <ImageView
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_width="@dimen/dp_60"
                        android:layout_height="@dimen/dp_60"
                        android:src="@mipmap/new_img_loading_1"
                        android:layout_gravity="center_vertical"/>

                    <LinearLayout
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_100"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/order_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/order_name"
                                android:textSize="@dimen/dp_20"
                                android:textColor="@color/color_black"/>

                            <TextView
                                android:id="@+id/order_phone"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/order_phone"
                                android:textSize="@dimen/dp_15"/>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/order_address"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/detils_presell"/>

                        <TextView
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/order_shouhuo"
                            android:textColor="@color/color_red"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/circop_order"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_15">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/order_recycle"
                        style="@style/view_match_wrap"/>

                    <RelativeLayout
                        android:layout_marginTop="@dimen/dp_20"
                        style="@style/view_match_wrap">

                        <TextView
                            android:id="@+id/peisong"
                            android:layout_marginLeft="@dimen/dp_30"
                            style="@style/view_width_height_warp"
                            android:text="配送方式"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/dp_15"/>

                        <TextView
                            android:layout_toRightOf="@id/peisong"
                            android:layout_marginLeft="@dimen/dp_15"
                            style="@style/view_width_height_warp"
                            android:text="普通配送"
                            android:textSize="@dimen/dp_15"/>

                        <TextView
                            android:layout_marginRight="@dimen/dp_10"
                            android:drawablePadding="@dimen/dp_10"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="@dimen/dp_30"
                            style="@style/view_width_height_warp"
                            android:text="快递 免邮"
                            android:drawableRight="@mipmap/home_arrow_right"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/dp_15"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_marginTop="@dimen/dp_20"
                        style="@style/view_match_wrap">

                        <TextView
                            android:id="@+id/yun"
                            android:layout_marginLeft="@dimen/dp_30"
                            style="@style/view_width_height_warp"
                            android:text="运费险"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/dp_15"/>

                        <TextView
                            android:layout_toRightOf="@id/yun"
                            android:layout_marginLeft="@dimen/dp_15"
                            style="@style/view_width_height_warp"
                            android:text="未选择"
                            android:textSize="@dimen/dp_15"/>

                        <TextView
                            android:layout_marginRight="@dimen/dp_10"
                            android:drawablePadding="@dimen/dp_10"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="@dimen/dp_30"
                            style="@style/view_width_height_warp"

                            android:drawableRight="@mipmap/home_arrow_right"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/dp_15"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_marginTop="@dimen/dp_20"
                        style="@style/view_match_wrap">

                        <TextView

                            android:layout_marginLeft="@dimen/dp_30"
                            style="@style/view_width_height_warp"
                            android:text="开具发票"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/dp_15"/>

                        <TextView
                            android:layout_marginRight="@dimen/dp_10"
                            android:drawablePadding="@dimen/dp_10"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="@dimen/dp_30"
                            style="@style/view_width_height_warp"
                            android:text="本次不开具发票"
                            android:drawableRight="@mipmap/home_arrow_right"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/dp_15"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_marginTop="@dimen/dp_20"
                        style="@style/view_match_wrap">

                        <TextView
                            android:id="@+id/ding"
                            android:layout_marginLeft="@dimen/dp_30"
                            style="@style/view_width_height_warp"
                            android:text="订单备注"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/dp_15"/>

                        <TextView
                            android:layout_toRightOf="@id/ding"
                            android:layout_marginLeft="@dimen/dp_15"
                            style="@style/view_width_height_warp"
                            android:text="选填，请先和商家协商一致"
                            android:textSize="@dimen/dp_15"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_marginTop="@dimen/dp_20"
                        style="@style/view_match_wrap">

                        <TextView
                            android:id="@+id/order_num"
                            android:layout_toLeftOf="@id/xiao"
                            android:layout_marginRight="@dimen/dp_10"
                            style="@style/view_width_height_warp"
                            android:text="共4件"
                            android:textSize="@dimen/dp_15"/>

                        <TextView
                            android:id="@+id/xiao"
                            android:layout_toLeftOf="@id/order_money"
                            style="@style/view_width_height_warp"
                            android:text="小计："
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/dp_15"/>

                        <TextView
                            android:id="@+id/order_money"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/dp_10"
                            style="@style/view_width_height_warp"
                            android:text="@string/detils_money"
                            android:textColor="@color/color_red"
                            android:textSize="@dimen/dp_15"/>

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:gravity="right"
        android:background="@color/color_white">

        <TextView
            android:id="@+id/order_dan_num"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:textSize="@dimen/dp_20"
            android:gravity="center_vertical"
            android:text="@string/order_num"/>

        <TextView
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:textSize="@dimen/dp_20"
            android:gravity="center_vertical"
            android:text="@string/order_heji"
            android:textColor="@color/color_black"/>

        <TextView
            android:id="@+id/order_dan_money"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:textSize="@dimen/dp_20"
            android:gravity="center_vertical"
            android:text="@string/detils_money"
            android:textColor="@color/color_red"/>

        <Button
            android:id="@+id/order__submit"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_gravity="center_vertical"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_40"
            android:text="@string/order_submit"
            android:textColor="@color/color_white"
            android:background="@drawable/circop_hu" />

    </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="#fff"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_hot"
        style="@style/item_hot_grid_image"
        android:background="@drawable/new_img_loading_2" />

    <TextView
        android:id="@+id/tv_name"
        style="@style/item_hot_grid_text"
        android:text="@string/item_hot_grid_text" />

    <TextView
        android:id="@+id/tv_price"
        style="@style/item_hot_grid_text"
        android:layout_gravity="left"
        android:layout_marginTop="@dimen/dp_3"
        android:text="@string/RMB"
        android:textColor="@drawable/type_item_background_selector" />
</LinearLayout>
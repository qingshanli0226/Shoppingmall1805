<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:id="@+id/rootView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <view.ToolBar
        android:layout_width="match_parent"
        android:layout_height="@dimen/Ucom_public_heightfour"
        app:title_text="产品详情"
        app:right_text=""/>
    <ImageView
        android:id="@+id/Image_goShop"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tlite_goshop"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/View_left_space"
        android:layout_weight="0.2"
        android:textSize="@dimen/com_public_textmaxsize"/>
    <TextView
        android:id="@+id/Price_shop"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="20dp"
        android:textSize="@dimen/com_public_textmaxsize"
        android:layout_weight="0.2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/Ucom_public_heightfour"
            android:textSize="@dimen/text_size_min"
            android:text="所有的产品问题,所有解释权归尚硅谷解释,该产品概不退还，友谊长存。"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="0.5">
        <ImageView
            android:id="@+id/shopcarGoShop"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/icon_good_detail_cart"/>
        <Button
            android:id="@+id/shopcarCallect"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/good_uncollected"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/icon_callserver_unpressed"/>
        <Button
            android:id="@+id/textGo"
            android:layout_width="@dimen/com_public_widthtow"
            android:layout_height="match_parent"
            android:text="购物"/>
    </LinearLayout>
</LinearLayout>
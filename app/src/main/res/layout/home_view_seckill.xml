<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="230dp"
    android:orientation="vertical">
    <LinearLayout
        style="@style/Base_Layout_Match_Wrap">

        <ImageView
            style="@style/Base_Layout_Wrap_Wrap"
            android:src="@drawable/home_arrow_left_flash" />

        <TextView
            style="@style/Base_Layout_Wrap_Wrap"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="@string/end"
            android:textColor="@color/color_Black" />

        <TextView
            android:id="@+id/tv_time_seckill"
            style="@style/Base_Layout_Wrap_Wrap"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@drawable/time_shape"
            android:padding="@dimen/dp_2"
            android:text="@string/Time"
            android:textColor="@color/colorWhite" />

        <TextView
            android:id="@+id/tv_more_seckill"
            style="@style/Base_Layout_Wrap_Wrap"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_5"
            android:drawableRight="@drawable/home_arrow_right"
            android:gravity="end"
            android:text="@string/Many" />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_seck"
        style="@style/Base_Layout_Match_Match"
        android:layout_height="@dimen/dp_200"
        ></android.support.v7.widget.RecyclerView>
</LinearLayout>
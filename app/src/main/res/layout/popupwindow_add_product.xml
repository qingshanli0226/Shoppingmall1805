<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/shop_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/tag_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/add_shop_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="zhonghua中华风-山海经 凤凰图 jsk 类别：山海经 凤凰图 JSK"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/add_shop_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="￥300"
                android:textColor="@android:color/holo_red_light"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="款式"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="M" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="L" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="XL"
            android:textColor="@android:color/holo_red_light" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="数量" />

       <TextView
           android:id="@+id/shop_jian"
           android:background="@drawable/circop_bian"
           android:layout_marginLeft="@dimen/dp_20"
           android:layout_width="@dimen/dp_40"
           android:layout_height="@dimen/dp_40"
           android:text="-"
           android:textSize="@dimen/dp_30"
           android:gravity="center"
           android:textColor="@color/color_red"
           ></TextView>

        <TextView
           android:id="@+id/shop_num"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
             android:text="1"
            android:textSize="@dimen/dp_30"
            android:gravity="center"
            ></TextView>

        <TextView
            android:id="@+id/shop_jia"
            android:background="@drawable/circop_bian"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:text="+"
            android:textSize="@dimen/dp_30"
            android:gravity="center"
            android:textColor="@color/color_red"
            ></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/add_shop_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/darker_gray"
            android:text="取消" />

        <Button
            android:id="@+id/add_shop_yes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/holo_red_light"
            android:text="确定"
            android:textColor="@android:color/white" />
    </LinearLayout>
</LinearLayout>
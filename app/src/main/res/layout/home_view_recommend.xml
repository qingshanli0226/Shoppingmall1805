<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        style="@style/Base_Layout_Match_Wrap"
        android:gravity="center_vertical"
        android:padding="@dimen/dp_10">

        <ImageView
            style="@style/Base_Layout_Wrap_Wrap"
            android:src="@drawable/home_arrow_left_new" />

        <TextView
            style="@style/Base_Layout_Wrap_Wrap"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="@string/New_Product"
            android:textColor="@color/color_Black" />

        <TextView
            android:id="@+id/tv_more_recommend"
            style="@style/Base_Layout_Wrap_Wrap"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_5"
            android:drawableRight="@drawable/home_arrow_right"
            android:gravity="end"
            android:text="@string/Many" />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_recommen"
        style="@style/Base_Layout_Match_Wrap"
        android:layout_height="@dimen/dp_370"
        ></android.support.v7.widget.RecyclerView>
</LinearLayout>
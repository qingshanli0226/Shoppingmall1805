<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.location.LocationActivity">
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="请输入您的地址"
            android:textSize="15sp"
            ></TextView>

        <EditText
            android:id="@+id/text_location"
            android:background="@drawable/biankuang"
            android:hint="列如:江苏省扬州市江都区"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            ></EditText>
        <Button
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bthlocation"
            android:text="确认地址"
            ></Button>
    </LinearLayout>
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="请输入您的手机号"
            android:textSize="15sp"
            ></TextView>
        <EditText
            android:id="@+id/text_phone"
            android:background="@drawable/biankuang"
            android:hint="列如:18611680362"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            ></EditText>
        <Button
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bthphone"
            android:text="确认手机号码"
            ></Button>
    </LinearLayout>
    <Button
        android:layout_marginTop="20dp"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:id="@+id/bth_determine"
        android:text="确定个人信息"
        android:gravity="center"
        android:layout_gravity="center"
        ></Button>
</LinearLayout>
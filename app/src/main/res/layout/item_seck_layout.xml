<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="100dp"
    android:layout_marginLeft="12sp"
    android:layout_height="180dp">

    <ImageView
        android:id="@+id/hotImg"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_115"
        android:scaleType="centerCrop" />
    <TextView
        android:id="@+id/tv_hot1"
        android:layout_width="@dimen/dp_100"
        style="@style/Base_Layout_Wrap_Wrap"
        android:gravity="center"
        android:textSize="@dimen/sp_20"
        android:layout_marginTop="@dimen/dp_5"
        android:textColor="@color/GoodInfo_Tv_Price_Color"
        ></TextView>
    <TextView
        android:id="@+id/tv_hot2"
        android:layout_width="@dimen/dp_100"
        style="@style/Base_Layout_Wrap_Wrap"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_5"
        android:textSize="@dimen/dp_15"
        android:textColor="@color/color_Black"
        ></TextView>
</LinearLayout>
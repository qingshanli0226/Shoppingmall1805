<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="@dimen/itemsecklayout_width"
    android:layout_marginLeft="12sp"
    android:layout_height="@dimen/itemhotlayout_width">

    <ImageView
        android:id="@+id/hotImg"
        android:layout_width="@dimen/itemsecklayout_width"
        android:layout_height="@dimen/itemsecklayout_height"
        android:scaleType="centerCrop" />
    <TextView
        android:id="@+id/tv_hot1"
        android:layout_width="@dimen/itemsecklayout_width"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/itemsecktextsize"
        android:layout_marginTop="@dimen/itemsecklayout_marginTop"
        android:textColor="#F50707"
        ></TextView>
    <TextView
        android:id="@+id/tv_hot2"
        android:layout_width="@dimen/itemsecklayout_width"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/itemsecklayout_marginTop"
        android:textSize="@dimen/itemsecktextsize2"
        android:textColor="#181717"
        ></TextView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    >
    <ImageView
        android:id="@+id/item_detail_img"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        >
    </ImageView>
    <TextView
        android:id="@+id/item_detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="名字"
        android:layout_below="@id/item_detail_img"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        >
    </TextView>
    <TextView
        android:id="@+id/item_detail_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="价钱"
        android:layout_below="@id/item_detail_title"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:textColor="@color/colorTextSmall"
        >
    </TextView>
</RelativeLayout>
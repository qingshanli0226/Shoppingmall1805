<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".typefragment.TypeFragment">
    <RelativeLayout
        style="@style/Base_Layout_Match_Match"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="1">
        <LinearLayout
            android:layout_centerHorizontal="true"
            android:layout_width="@dimen/dp_150"
            android:background="@drawable/biao"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_18"
            >
            <Button
                android:id="@+id/bt_fen"
                style="@style/Base_Layout_Match_Match"
                android:layout_width="@dimen/dp_0"
                android:text="@string/Good_Type"
                android:background="@drawable/biao_fe"
                android:textSize="@dimen/dp_20"
                android:layout_weight="1"></Button>
            <Button
                style="@style/Base_Layout_Match_Match"
                android:id="@+id/bt_biao"
                android:layout_width="@dimen/dp_0"
                android:text="@string/Good_Biao"
                android:textSize="@dimen/dp_20"
                android:background="@drawable/biao_bi"
                android:layout_weight="1"></Button>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        style="@style/Base_Layout_Match_Match"
        android:layout_height="@dimen/dp_2"
        android:background="@color/color_Gray"></LinearLayout>
    <com.example.framework.MyViewPager
        android:id="@+id/vr_fen"
        style="@style/Base_Layout_Match_Match"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="10">
    </com.example.framework.MyViewPager>



</LinearLayout>
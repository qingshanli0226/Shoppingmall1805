<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".home.MainActivity">
    <android.support.v4.view.ViewPager
        android:id="@+id/vr"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"></android.support.v4.view.ViewPager>
    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/common"
        android:layout_width="match_parent"
        app:tl_iconMargin="-5dp"
        app:tl_iconWidth="40dp"
        app:tl_iconHeight="40dp"
        app:tl_textSelectColor="#1CD9F1"
        app:tl_textUnselectColor="#000"
        android:layout_height="0dp"
        android:layout_weight="1"></com.flyco.tablayout.CommonTabLayout>

</LinearLayout>
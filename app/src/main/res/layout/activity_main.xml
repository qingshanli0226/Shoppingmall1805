<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".home.MainActivity">

    <com.shopmall.bawei.framework.view.MyToolBar
        style="@style/BaseToolbarStyle"
        android:id="@+id/myToolbar" />

    <FrameLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/frameLayoutId"/>


    <RadioGroup
        style="@style/MainRadioGroupStyle"
        android:id="@+id/rg_main"
        android:layout_alignParentBottom="true"
        android:background="@drawable/home_bottom_parent_bg">

        <RadioButton
            style="@style/WidthWeightStyle.widthMainButtonStyle"
            android:id="@+id/rb_home"
            android:checked="true"
            android:drawableTop="@drawable/home_button_selector"
            android:text="首页" />

        <RadioButton
            style="@style/WidthWeightStyle.widthMainButtonStyle"
            android:id="@+id/rb_type"
            android:drawableTop="@drawable/type_button_selector"
            android:text="分类" />

        <RadioButton
            style="@style/WidthWeightStyle.widthMainButtonStyle"
            android:id="@+id/rb_community"
            android:drawableTop="@drawable/community_button_selector"
            android:paddingTop="10dp"
            android:text="发现" />

        <RadioButton
            style="@style/WidthWeightStyle.widthMainButtonStyle"
            android:id="@+id/rb_cart"
            android:drawableTop="@drawable/cart_button_selector"
            android:text="购物车" />

        <RadioButton
            style="@style/WidthWeightStyle.widthMainButtonStyle"
            android:id="@+id/rb_user"
            android:drawableTop="@drawable/user_button_selector"
            android:text="个人中心" />
    </RadioGroup>




</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.MainActivity">
    <com.shopmall.bawei.framework.example.framework.MyViewPager
        android:id="@+id/vr"
        style="@style/Base_Layout_Match_Match"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="10"></com.shopmall.bawei.framework.example.framework.MyViewPager>
    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/common"
        style="@style/Base_Layout_Match_Match"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="1"
        app:tl_iconMargin="@dimen/dp_5f"
        app:tl_iconWidth="@dimen/dp_40"
        app:tl_iconHeight="@dimen/dp_40"
        app:tl_textSelectColor="@color/color_Red"
        app:tl_textUnselectColor="@color/color_Black"
       ></com.flyco.tablayout.CommonTabLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="#9C27B0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <Button
            android:id="@+id/btn_biaoqian"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:background="@drawable/shapcrop"
            android:text="标签"
            android:textColor="@color/skyblue"
            android:textSize="@dimen/txt_sizethirty"
            />
        <Button
            android:id="@+id/btn_fenlei"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:background="@drawable/shapcrop2"
            android:text="分类"
            android:textColor="@color/skyblue"
            android:textSize="@dimen/txt_sizethirty" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        >
        <ListView
            android:id="@+id/list_shopclothes"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            ></ListView>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recy_shopshow"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_weight="9"
            ></androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>





</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".home.view.fragment.ListFragment">

    <com.shopmall.bawei.common.MyToolBar
        android:visibility="gone"
        style="@style/MyToolBar"
        android:id="@+id/toolbar"
        app:left_show="false"
        app:title_show="false"
        app:right_src="@mipmap/menu"
        app:right_text="消息"
        app:right_text_color="@android:color/white"
        android:background="@android:color/holo_red_light"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/zhonglei"
            ></androidx.recyclerview.widget.RecyclerView>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="热卖"
                ></TextView>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/remai"
                ></androidx.recyclerview.widget.RecyclerView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="常用"
                ></TextView>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/changyong"
                ></androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    >
    <ImageView
        android:id="@+id/seckillinfo_item_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/ic_launcher"
        android:layout_marginTop="10dp"

        >
    </ImageView>
    <TextView
        android:id="@+id/seckillinfo_item_tv_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$20.00"
        android:textColor="#FB0505"
        android:layout_below="@id/seckillinfo_item_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        >
    </TextView>
    <TextView
        android:id="@+id/seckillinfo_item_tv_old"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$20.00"
        android:layout_below="@id/seckillinfo_item_tv_new"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        >
    </TextView>
</RelativeLayout>
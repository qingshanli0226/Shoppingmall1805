<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="@dimen/dp_180"
    android:orientation="vertical"
    android:background="@drawable/circop_message"
    android:layout_marginLeft="@dimen/dp_20"
    android:layout_marginRight="@dimen/dp_20"
    android:layout_marginTop="@dimen/dp_15">
    <TextView
        android:id="@+id/message_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@drawable/circop_title"
        ></TextView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"

        >
        <TextView
            android:layout_marginLeft="@dimen/dp_10"
            android:id="@+id/message_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/message_titile"
            android:gravity="center"
            android:textColor="@color/color_black"
            android:textSize="@dimen/dp_20"
            ></TextView>

        <TextView
            android:id="@+id/message_date"
            android:layout_alignParentRight="true"

            android:layout_marginRight="@dimen/dp_15"
            android:layout_gravity="right"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/message_time"
            ></TextView>

        <TextView
            android:id="@+id/message_circle"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:background="@drawable/circop_red"

            ></TextView>


    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_110"
        
        >
        <ImageView
            android:id="@+id/message_image"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_gravity="center_vertical"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"

            ></ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/message_order"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="@string/message_order_no"
                android:gravity="center_vertical"
                android:textColor="@color/color_black"
                android:textSize="@dimen/sp_20"
                ></TextView>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight="1"

               >
               <TextView
                   android:layout_marginLeft="@dimen/dp_5"
                   android:id="@+id/message_tishi"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:text="@string/message_date"
                   android:textColor="@color/color_black"
                   android:textSize="@dimen/sp_20"
                   android:gravity="center"
                   ></TextView>
               <TextView
                   android:id="@+id/message_time"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:text="@string/message_time"
                   android:textSize="@dimen/sp_20"
                   android:gravity="center"
                   ></TextView>

           </LinearLayout>


            <TextView
                android:id="@+id/message_read"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/message_no_read"
                android:textSize="@dimen/sp_20"
                android:gravity="center"
                android:textColor="@color/color_black"
                ></TextView>

        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#999999"
        ></View>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text="详情"
        android:paddingLeft="@dimen/dp_10"
        android:textSize="@dimen/dp_20"
        android:textColor="@color/color_black"
        android:layout_marginRight="@dimen/dp_10"
        android:drawableRight="@mipmap/home_arrow_right"
        ></TextView>

</LinearLayout>
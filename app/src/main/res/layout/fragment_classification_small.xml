<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Classification.view.classificationfragment.ClassificationSmallFragment">
  <TextView
      android:id="@+id/errorTv"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:visibility="gone"
      android:gravity="center"
      android:textColor="@android:color/holo_red_dark"
      android:textSize="20sp"/>
  <RelativeLayout
      android:layout_below="@+id/toolbar"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:id="@+id/normalContent">
    <ProgressBar android:layout_width="100dp" android:layout_height="100dp"
        android:id="@+id/loadingBar"
        android:layout_centerInParent="true"
        android:visibility="gone"/>
  </RelativeLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="match_parent"
  >
  <ListView
      android:background="@color/colorGRAY"
      android:layout_width="0dp"
      android:layout_weight="1"

      android:layout_height="match_parent"
      android:id="@+id/clothes_lv"
      >

  </ListView>


  <androidx.recyclerview.widget.RecyclerView
      android:layout_width="0dp"
      android:layout_weight="4"
      android:layout_height="match_parent"
      android:id="@+id/content_rv"
      >

  </androidx.recyclerview.widget.RecyclerView>
</LinearLayout>



</FrameLayout>
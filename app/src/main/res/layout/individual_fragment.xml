<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_170"

                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/new_user_icon_background"
                    android:scaleType="fitXY"
                    ></ImageView>

                <ImageView
                    android:id="@+id/log_my"
                    android:layout_centerInParent="true"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                     android:src="@mipmap/new_user_icon"
                    ></ImageView>

                <TextView
                     android:id="@+id/loginr_my"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_centerInParent="true"
                    android:layout_below="@id/log_my"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/dp_20"
                    android:text="登陆/注册"
                    ></TextView>


            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:background="#EEEEEE"
                ></View>

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="@dimen/dp_40"

               >
               <TextView
                   android:layout_marginLeft="@dimen/dp_10"
                   android:gravity="center"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:textSize="@dimen/dp_15"
                   android:text="我的订单"
                   ></TextView>

               <TextView
                   android:layout_marginRight="@dimen/dp_10"
                   android:layout_alignParentRight="true"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:textSize="@dimen/dp_15"
                   android:text="查看全部订单"
                   android:gravity="center"
                   android:drawableRight="@mipmap/home_arrow_right"
                   ></TextView>

           </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                 android:background="#CFCFCF"
                ></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:drawablePadding="@dimen/dp_10"
                    android:drawableTop="@mipmap/new_order_status_fukuan"
                    android:text="待付款"
                    android:textSize="@dimen/dp_17"
                    ></TextView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:drawablePadding="@dimen/dp_10"
                    android:drawableTop="@mipmap/new_order_status_fahuo"
                    android:text="待发货"
                    android:textSize="@dimen/dp_17"
                    ></TextView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:drawablePadding="@dimen/dp_10"
                    android:drawableTop="@mipmap/new_order_status_shouhuo"
                    android:text="待收货"
                    android:textSize="@dimen/dp_17"
                    ></TextView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:drawablePadding="@dimen/dp_10"
                    android:drawableTop="@mipmap/icon_order_status_finish"
                    android:text="已完成"
                    android:textSize="@dimen/dp_17"
                    ></TextView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:drawablePadding="@dimen/dp_10"
                    android:drawableTop="@mipmap/new_order_status_help"
                    android:text="售后"
                    android:textSize="@dimen/dp_17"
                    ></TextView>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:background="#EEEEEE"
                ></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fahuo_my"
                android:padding="13dp"
                android:drawableLeft="@mipmap/user_channel_icon_address"
                android:drawablePadding="@dimen/dp_10"
                android:text="收货地址"
                android:textSize="@dimen/sp_15"

                ></TextView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="45dp"
                android:background="#CFCFCF"
                ></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/shoucang_my"
                android:padding="13dp"
                android:drawableLeft="@mipmap/user_channel_icon_collect"
                android:drawablePadding="@dimen/dp_10"
                android:text="我的收藏"
                android:textSize="15dp"

                ></TextView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="45dp"
                android:background="#CFCFCF"
                ></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/youhui_my"
                android:padding="13dp"
                android:drawableLeft="@mipmap/user_channel_icon_coupon"
                android:drawablePadding="@dimen/dp_10"
                android:text="我的优惠劵"
                android:textSize="@dimen/sp_15"

                ></TextView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="45dp"
                android:background="#CFCFCF"
                ></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guazi_my"
                android:padding="13dp"
                android:drawableLeft="@mipmap/user_channel_icon_score"
                android:drawablePadding="@dimen/dp_10"
                android:text="我的瓜子"
                android:textSize="@dimen/sp_15"

                ></TextView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="45dp"
                android:background="#CFCFCF"
                ></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/jiangpin_my"
                android:padding="13dp"
                android:drawableLeft="@mipmap/user_channel_icon_coupon"
                android:drawablePadding="@dimen/dp_10"
                android:text="我的奖品"
                android:textSize="@dimen/sp_15"

                ></TextView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="45dp"
                android:background="#CFCFCF"
                ></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dianzi_my"
                android:padding="13dp"
                android:drawableLeft="@mipmap/user_icon_ticket"
                android:drawablePadding="@dimen/dp_10"
                android:text="我的电子票"
                android:textSize="@dimen/sp_15"

                ></TextView>

            <View
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:background="#EEEEEE"
                ></View>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/share_my"
                android:padding="13dp"
                android:drawableLeft="@mipmap/user_channel_icon_invitation"
                android:drawablePadding="@dimen/dp_10"
                android:text="邀请分享"
                android:textSize="@dimen/sp_15"

                ></TextView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="45dp"
                android:background="#CFCFCF"
                ></View>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/kefu_my"
                android:padding="13dp"
                android:drawableLeft="@mipmap/user_channel_icon_callcenter"
                android:drawablePadding="@dimen/dp_10"
                android:text="客服中心"
                android:textSize="@dimen/sp_15"

                ></TextView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="45dp"
                android:background="#CFCFCF"
                ></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/kefu_fankui_my"
                android:padding="13dp"
                android:drawableLeft="@mipmap/user_channel_icon_feedback"
                android:drawablePadding="@dimen/dp_10"
                android:text="服务反馈"
                android:textSize="@dimen/sp_15"

                ></TextView>

            <View
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:background="#EEEEEE"
                ></View>





        </LinearLayout>



    </ScrollView>





</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mvp.view.fragment.FirstFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/homecolorRed"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/Classification_MarginRight"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@color/colorWilte"
                    style="@style/Home_LinearLayout"
                    android:layout_height="wrap_content"

                    >
                    <ImageView
                       style="@style/Home_Image"
                        android:layout_gravity="center"
                        android:src="@drawable/home_search_icon"
                        >
                    </ImageView>
                    <EditText

                       style="@style/Home_EditText"
                        android:textColor="@color/colorBlack"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:textColorHint="@color/colorBlack"
                        android:hint="@string/EditText_Message"
                        >
                    </EditText>
                </LinearLayout>
                <RadioButton
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/emailimg"
                    android:button="@null"
                    android:layout_centerVertical="true"
                    android:text="@string/Message"
                    android:id="@+id/emailbutton"
                    android:textColor="@color/colorWilte"
                    >
                </RadioButton>
            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/main_rv"
            >

        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>

</FrameLayout>
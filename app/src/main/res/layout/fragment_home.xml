<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingDefaultResource">

    <com.shopmall.bawei.framework.view.MyToolBar
        style="@style/BaseToolbarStyle"
        android:visibility="visible"
        android:id="@+id/toolbar"
        app:left_show="false"
        app:title_show="false"
        app:right_src="@drawable/new_message_icon"
        app:right_text="@string/homeToolbarRightText"
        app:right_text_color="@android:color/white"
        android:background="@android:color/holo_red_light"/>

    <RelativeLayout
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/normalContent">
        <androidx.recyclerview.widget.RecyclerView
            style="@style/RecyclerViewStyle"
            android:id="@+id/homeRv"/>


    </RelativeLayout>
    <EditText
        android:id="@+id/tv_search_home"
        style="@style/HomeEditStyle"
        android:background="@drawable/search_home_shape"
        android:drawableLeft="@drawable/home_search_icon"
        android:drawablePadding="10dp"
        android:hint="输入搜索信息"
        android:textSize="13sp" />

</RelativeLayout>
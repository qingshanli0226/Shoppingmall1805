<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".home.HomeFragment">

    <androidx.appcompat.widget.Toolbar
       style="@style/Base.ToolBar.Home"
        >
       <LinearLayout
          style="@style/Base.HLinear"
           >
           <LinearLayout
               style="@style/Base.HLinear.Home"
               >
               <ImageView
                   android:id="@+id/search_btn_home"
                   style="@style/Base.Home_Search_IV"
                   />
               <EditText
                   android:id="@+id/search_et_home"
                   style="@style/Base.EditText.Home_Search_Edit"
                   />
           </LinearLayout>
           <LinearLayout
               android:id="@+id/new_message"
               android:layout_alignParentRight="true"
               android:layout_centerVertical="true"
               style="@style/Base.VLinear.New_Message"

               android:layout_height="50dp"
               android:layout_marginRight="10dp"
               android:gravity="center"
               android:orientation="vertical"
               >
               <ImageView
                   android:src="@drawable/new_message_icon"
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="消息"
                   android:textColor="#ffffff"
                   android:textSize="15sp"
                   />
           </LinearLayout>
       </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_home_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
</LinearLayout>
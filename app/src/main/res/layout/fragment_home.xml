<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource">

    <com.bawei.common.view.MyToolBar
        android:id="@+id/toolbar"
        style="@style/BannerStyle.MyToolBarStyle"
        android:background="@android:color/holo_red_light"
        android:visibility="visible"
        app:left_show="false"
        app:right_src="@mipmap/menu"
        app:right_text="@string/message"
        app:right_text_color="@android:color/white"
        app:title_show="false" />

    <RelativeLayout
        android:id="@+id/normalContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/homeRv"
            style="@style/RecyclerViewStyle" />

        <ProgressBar
            android:id="@+id/loadingBar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:visibility="gone" />

    </RelativeLayout>

    <TextView
        android:id="@+id/errorTv"
        style="@style/ErrorTextStyle" />

    <EditText
        android:id="@+id/tv_search_home"
        style="@style/HomeEditStyle"
        android:background="@drawable/search_home_shape"
        android:drawableLeft="@drawable/home_search_icon"
        android:hint="@string/search" />

</RelativeLayout>
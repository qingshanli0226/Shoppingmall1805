<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".home.view.HomeFragment">

    <android.support.v7.widget.Toolbar
        style="@style/Base_Layout_Match_Match"
        android:layout_height="@dimen/sp_60"
        android:background="@color/colorOrange"
        >
        <LinearLayout
           style="@style/Base_Layout_Match_Wrap"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp_30"
            >
            <EditText
                android:layout_width="@dimen/dp_320"
                android:layout_height="@dimen/dp_40"
                android:drawableLeft="@mipmap/home_search_icon"
                android:background="@drawable/yuan"
                android:layout_gravity="center"
                android:hint="@string/Please_Enter"
                ></EditText>
            <LinearLayout
                style="@style/Base_Layout_Match_Wrap"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:background="@mipmap/community_message_icon"
                    ></ImageView>

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.Toolbar>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv"
        style="@style/Base_Layout_Match_Match"></android.support.v7.widget.RecyclerView>
</LinearLayout>
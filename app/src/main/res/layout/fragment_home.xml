<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".home.HomeFragment">
    <com.example.framework.view.ToolBar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        app:title_show="false"
        app:right_show="true"
        app:bottom_show="false"
        app:right_src="@drawable/new_message_icon"
        app:right_text="消息"
        app:right_text_color="#ffffff"
        app:left_show="false"
        android:background="@color/MainBarColor"
        android:layout_height="60dp"
        android:paddingLeft="10dp"
        >
        <LinearLayout
            style="@style/Base.HLinear"
            >
            <LinearLayout
                style="@style/Base.HLinear.Home"
                >
                <ImageView
                    android:id="@+id/search_btn_home"
                    style="@style/Base.Home_Search_IV"
                    />
                <EditText
                    android:id="@+id/search_et_home"
                    style="@style/Base.EditText.Home_Search_Edit"
                    />
            </LinearLayout>

        </LinearLayout>
    </com.example.framework.view.ToolBar>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_home_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
</LinearLayout>
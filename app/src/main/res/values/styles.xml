<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.FullScreen">
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="Base_Layout_Match_Match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="Base_Layout_Match_Wrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Base_Layout_Wrap_Wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Layout_GoodInfo_TooBar_Info" parent="Base_Layout_Wrap_Wrap">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/Good_Info_TooBar_Name</item>
        <item name="android:textColor">@color/GoodInfo_TooBar_NameColor</item>
        <item name="android:textSize">@dimen/sp_20</item>
    </style>
    <style name="Layout_GoodInfo_Screen" parent="Base_Layout_Match_Match">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">8</item>
    </style>
    <style name="Layout_GoodInfo_Image" parent="Base_Layout_Match_Match">
        <item name="android:layout_height">@dimen/dp_350</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_margin">@dimen/sp_15</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <style name="Layout_GoodInfo_Tv_Name" parent="Base_Layout_Match_Wrap">
        <item name="android:layout_marginLeft">@dimen/dp_15</item>
        <item name="android:text">@string/Good_Info_Tv_Name</item>
        <item name="android:textColor">@color/GoodInfo_Tv_Name_Color</item>
    </style>
    <style name="Layout_GoodInfo_Tv_Desc" parent="Base_Layout_Match_Wrap">
        <item name="android:padding">@dimen/dp_10</item>
        <item name="android:text">@string/Good_Info_Tv_Desc</item>
        <item name="android:textColor">@color/GoodInfo_Tv_Desc_Color</item>
    </style>
    <style name="Layout_GoodInfo_Tv_Price" parent="Base_Layout_Match_Wrap">
        <item name="android:padding">@dimen/dp_10</item>
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="android:textColor">@color/GoodInfo_Tv_Price_Color</item>
    </style>
    <style name="Layout_GoodInfo_View" parent="Base_Layout_Match_Match">
        <item name="android:height">@dimen/dp_1</item>
        <item name="android:layout_margin">@dimen/dp_10</item>
        <item name="android:background">@color/GoodInfo_View</item>
    </style>
    <style name="Layout_GoodInfo_Linear_Layout" parent="Base_Layout_Match_Wrap">
        <item name="android:padding">@dimen/dp_10</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="Layout_GoodInfo_View_TWO" parent="Base_Layout_Match_Match">
        <item name="android:height">@dimen/dp_8</item>
        <item name="android:layout_margin">@dimen/dp_10</item>
        <item name="android:background">@color/GoodInfo_View</item>
    </style>
    <style name="Layout_GoodInfo_Tv_Style" parent="Base_Layout_Match_Wrap">
        <item name="android:drawableRight">@drawable/home_arrow_right</item>
        <item name="android:padding">@dimen/dp_10</item>
        <item name="android:text">@string/Good_Info_style</item>
        <item name="android:textColor">@color/GoodInfo_Tv_Style_Color</item>
    </style>
    <style name="Layout_GoodInfo_Ti" parent="Base_Layout_Match_Wrap">
        <item name="android:padding">@dimen/dp_10</item>
        <item name="android:text">@string/Good_Info_Ti</item>
        <item name="android:textColor">@color/GoodInfo_Tv_Style_Color</item>
    </style>
    <style name="Layout_GoodInfo_Root" parent="Base_Layout_Wrap_Wrap">
        <item name="android:drawablePadding">@dimen/dp_5</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/sp_2</item>
        <item name="android:textColor">@color/GoodInfo_Tv_Style_Color</item>
    </style>
    <style name="Layout_GoodInfo_Add_Car">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/add_cart_bg_selector</item>
        <item name="android:text">@string/Good_Info_Add_shopping_Car</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>
</resources>

<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shopmall.bawei.shopmall1805">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".aplacation.ShopmallApplication"
        android:allowBackup="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:icon="@drawable/shop"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.activity.CallcenterActivity"></activity>
        <activity android:name=".ui.activity.view.BangActivity"/>
        <activity android:name=".ui.activity.view.GoodinfoActivity" />
        <activity android:name=".ui.activity.MainActivity"
            android:launchMode="singleTask"></activity>
        <activity
            android:name=".ui.activity.WelcomActivity"
            android:theme="@style/AppTheme.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
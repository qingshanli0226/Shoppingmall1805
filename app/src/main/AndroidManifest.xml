<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shopmall.bawei.shopmall1805">

    <application
        android:name=".app.ShopmallApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.ScreenFull"
        android:usesCleartextTraffic="true">
        <activity android:name=".app.adapter.home.DetailsActivity"></activity>
        <activity android:name=".app.adapter.home.ChannelInfoActivity" />
        <activity android:name=".app.ui.activity.WelcomeActivity" />
        <activity android:name=".app.ui.activity.MainActivity" android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service android:name=".framework.service.ShopmallService"/>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>
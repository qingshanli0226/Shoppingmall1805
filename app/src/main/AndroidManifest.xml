<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shopmall.bawei.shopmall1805">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".ShopmallApplication"
        android:allowBackup="true"
        android:icon="@mipmap/atguigu_logo"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".myfragment.view.ReceivingAddressMainActivity"></activity>
        <activity
            android:name=".goods.view.GoodsActivity"
            android:launchMode="singleTask"></activity>
        <activity
            android:name=".WelcomActivity"
            android:theme="@style/AppTheme.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"></activity>

        <service android:name="mvp.UserService" />
    </application>

</manifest>
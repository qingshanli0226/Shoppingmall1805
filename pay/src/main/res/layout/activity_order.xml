<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PayActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical"
        android:layout_margin="10dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="张丽东"
                android:textColor="#000"
                android:textSize="30sp"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/tvUserTelphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12345678910"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                />

        </LinearLayout>
        <TextView
            android:id="@+id/tvUserAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="天津八维游戏学院"
            android:textColor="#000"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            />

        <Button
            android:id="@+id/btAddAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="添加新的收货地址"
            android:background="#f00"
            android:textColor="#fff"
            android:textSize="20sp"
            />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvShopcarList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        ></android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <Button
                android:id="@+id/btRefer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提交订单"
                android:textColor="#fff"
                android:textSize="18sp"
                android:background="@drawable/shape"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_centerInParent="true"
                />
            <TextView
                android:id="@+id/tvTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="193.17"
                android:textSize="25sp"
                android:textColor="#f00"
                android:layout_toLeftOf="@+id/btRefer"
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/fuhao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:textSize="20sp"
                android:textColor="#f00"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/tvTotal"
                />
            <TextView
                android:id="@+id/tvHeji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="合计:"
                android:textSize="25sp"
                android:textColor="#000"
                android:layout_toLeftOf="@+id/fuhao"
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/tvCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="共6件，"
                android:textSize="20sp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/tvHeji"
                />
        </RelativeLayout>

    </LinearLayout>



</LinearLayout>